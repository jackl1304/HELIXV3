# Sample Environment Configuration for Netcup Production Deployment

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SERVER CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# DATABASE (Neon Cloud / Supabase / Local PostgreSQL)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Neon Example:
DATABASE_URL="postgresql://user:password@ep-cool-name-123456.eu-central-1.aws.neon.tech:5432/helix_regulatory?sslmode=require"

# Local PostgreSQL Example:
# DATABASE_URL="postgresql://helix_user:secure_password@localhost:5432/helix_regulatory"

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AI & API KEYS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Anthropic Claude (Primary AI)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI (Embeddings & Fallback)
OPENAI_API_KEY=sk-your-openai-key-here

# Groq (Fast Inference Fallback)
GROQ_API_KEY=gsk_your-groq-key-here

# OpenRouter (Multi-Model Fallback)
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# REGULATORY DATA SOURCES
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# FDA API
FDA_API_KEY=your-fda-api-key

# EMA API (if available)
EMA_API_KEY=your-ema-api-key

# MHRA API (if available)
MHRA_API_KEY=your-mhra-api-key

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# PATENT DATABASES
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# USPTO (No key required - public API)
# EPO OPS
EPO_CONSUMER_KEY=your-epo-consumer-key
EPO_CONSUMER_SECRET=your-epo-consumer-secret

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# LEGAL DATABASES
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# CourtListener
COURTLISTENER_API_KEY=your-courtlistener-key

# PACER (Optional)
PACER_USERNAME=your-pacer-username
PACER_PASSWORD=your-pacer-password

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# DATA COLLECTION CONTROL
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Enable/Disable automatic data ingestion on startup
REG_AUTO_ENABLED=true

# Sync frequency (in hours)
SYNC_INTERVAL_HOURS=24

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SECURITY
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Generate with: openssl rand -hex 32
SESSION_SECRET=your-64-character-random-session-secret-here

# JWT Secret (if implementing authentication)
JWT_SECRET=your-jwt-secret-here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# EMAIL / NOTIFICATIONS (Optional)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-key

# SMTP (Alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# REDIS (Optional - for caching)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
REDIS_URL=redis://localhost:6379

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# MONITORING (Optional)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Grafana Admin Password
GRAFANA_PASSWORD=admin

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# MULTI-TENANT CONFIGURATION (Optional)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Enable multi-tenancy
MULTI_TENANT_ENABLED=false

# Default tenant ID
DEFAULT_TENANT_ID=default

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# DOCKER COMPOSE SPECIFIC
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# PostgreSQL (if using docker-compose postgres service)
POSTGRES_USER=helix_user
POSTGRES_PASSWORD=secure_database_password
POSTGRES_DB=helix_regulatory

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# LOGGING
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
LOG_LEVEL=info
LOG_FORMAT=json
