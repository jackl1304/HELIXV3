{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "noEmit": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"],
      "@assets/*": ["attached_assets/*"],
      "@server/*": ["server/*"],
      "@client/*": ["client/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "lucide-react": ["client/src/components/icons/index.tsx"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "server/**/*",
    "client/src/**/*",
    "client/**/*",
    "shared/**/*",
    "scripts/**/*",
    "models/**/*",
    "utils/**/*",
    "types/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
